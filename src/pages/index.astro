        <AccordionPanel client:load>アコーディオン内容1</AccordionPanel>
      </AccordionItem>
      <AccordionItem client:load>
        <AccordionTrigger client:load>ボタン2</AccordionTrigger>
        <AccordionPanel client:load>アコーディオン内容2</AccordionPanel>
