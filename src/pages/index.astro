---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Title from '@/components/Title';
import Alert from '@/components/common/Alert';
import IconFont from '@/components/common/IconFont';
import Button from '@/components/common/button';
import ReactAccordion from '@/components/sample/ReactAccordion';
import ReactTab from '@/components/sample/ReactTab';
import ModalTest from '@/components/ModalTest';
---

<script>
  import sample from '@/libs/sample';
  import Simplemodal from '@/libs/simplemodal';
  const simplemodal = new Simplemodal();

  sample();
</script>
<Layout title="Welcome to Astro." description={'ああああああ'}>
  <title slot="site-head">タイトル</title>

  <main>
    <h1>Welcome to <span class="text-gradient">Astro TEST</span></h1>
    <Title>ああああ</Title>
    <Alert
      alert="success"
      client:load
      >あああああ</Alert
    >

    <button data-simplemodal-trigger="modal-id-01">モーダルを開く</button>
    <div id="modal-id-01">モーダルの中身</div>

    <img src="/images/base/favicon.ico" alt="">

    <IconFont icon="file2" />

    <Button
      tagType="button"
      theme="basic"
      text="サンプルてきすと"
      leftIcon="file"
      type="button"
    />

    <a href="/about">aboutページへ</a>

    <ReactAccordion client:load />
    <ReactTab client:load />

    <ModalTest client:load />

